<h1>Image Manipulation Tool</h1>

<form action="/upload" method="post" enctype="multipart/form-data">
  <label for="image_file">Upload image:</label>
  <input type="file" id="image_file" name="image_file" accept="image/*" required>
  
  <h3>Select effects:</h3>
  <ul>
    <li>
      <label>
        <input type="checkbox" name="effects[]" value="scale"> Scale
      </label>
      <input type="number" name="effect_scale" value="1.0" step="0.1">
    </li>
    <li>
      <label>
        <input type="checkbox" name="effects[]" value="geometric_patterns"> Geometric Patterns
      </label>
    </li>
    <li>
      <label>
        <input type="checkbox" name="effects[]" value="fractals"> Fractals
      </label>
    </li>
    <li>
      <label>
        <input type="checkbox" name="effects[]" value="translate"> Translate
      </label>
      <input type="number" name="effect_translate_x" value="0">
      <input type="number" name="effect_translate_y" value="0">
    </li>
  </ul>
  
  <button type="submit">Apply Effects</button>
</form>
